<?php /** @var $block \Magento\NegotiableQuote\Block\Adminhtml\Quote\View\Totals\Negotiation */ ?>
<?php $total = $block->getTotal() ?>
<?php foreach ($block->getTotalOptions() as $key => $option): ?>
    <tr class="<?= $block->escapeHtml($key) ?>">
        <th scope="row">
            <input type="radio" disabled="disabled" name="quote[<?php /* @noEscape */
            echo $total->getCode() ?>]"
                   value="<?php /* @noEscape */
                   echo $option->getCode() ?>"
                <?php /* @noEscape */
                echo ($option->getCode() == $total->getType()) ? 'checked' : ''; ?> />
            <?= $block->escapeHtml($option->getLabel()) ?>
        </th>
        <td data-th="<?= $block->escapeHtml($option->getLabel()) ?>">
            <span class="price">
                <?php if ($option->getIsPrice()): ?>
                    <?= /* @noEscape */
                    $block->formatPrice(
                        $option->getValue(),
                        $block->getQuote()->getBaseCurrencyCode()
                    ) ?>
                <?php else: ?>
                    <?= $block->escapeHtml($block->displayPrices($option->getValue())) ?>
                    <span class="addon-suffix">%</span>
                <?php endif; ?>
            </span>
        </td>
    </tr>
<?php endforeach ?>
